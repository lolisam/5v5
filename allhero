      "不羁之悦 尼菈", "纳祖芒荣耀 奎桑提", "炽炎雏龙 斯莫德", "明烛 米利欧", "异画师 彗", "百裂冥犬 纳亚菲利", "铁血狼母 安蓓萨", "流光镜影 梅尔", "不破之誓 芸阿娜"
    ];

    // 获取DOM元素
    const group1List = document.getElementById('group1');
    const group2List = document.getElementById('group2');
    const refreshBtn = document.getElementById('refreshBtn');

    // 抽取英雄的函数
    function drawHeroes() {
      // 清空现有列表
      group1List.innerHTML = '';
      group2List.innerHTML = '';
      
      // 用于存储已抽取的英雄索引
      const selectedIndices = [];
      
      // 抽取组1英雄
      for (let i = 0; i < 15; i++) {
        let randomIndex;
        do {
          randomIndex = Math.floor(Math.random() * heroes.length);
        } while (selectedIndices.includes(randomIndex));
        selectedIndices.push(randomIndex);
        const hero = heroes[randomIndex];
        const listItem = document.createElement('li');
        listItem.textContent = hero;
        group1List.appendChild(listItem);
      }
      
      // 抽取组2英雄
      for (let i = 0; i < 15; i++) {
        let randomIndex;
        do {
          randomIndex = Math.floor(Math.random() * heroes.length);
        } while (selectedIndices.includes(randomIndex));
        selectedIndices.push(randomIndex);
        const hero = heroes[randomIndex];
        const listItem = document.createElement('li');
        listItem.textContent = hero;
        group2List.appendChild(listItem);
      }
    }

    // 初始抽取
    drawHeroes();

    // 绑定刷新按钮事件
    refreshBtn.addEventListener('click', function() {
      // 按钮点击效果
      this.textContent = "抽取中...";
      this.disabled = true;
      
      // 短暂延迟后重新抽取，增强用户体验
      setTimeout(() => {
        drawHeroes();
        this.textContent = "重新抽取";
        this.disabled = false;
      }, 300);
    });
  </script>
